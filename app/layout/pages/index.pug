extends ../blocks/head

block variables
    - var pageTitle = 'Legalbet';
    - var tableHeader = ['Букмекер', 'Маржа', 'Отзывы', 'Бонус', ' '];
    - var menuWidgetLink = ['Школа ставок', 'FAQ', 'Вопрос-ответ', 'Советы игроков', 'Калькулятор расчета выйгрыша'];
                    

block content
